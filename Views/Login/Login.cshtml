@model WebApplication1.Web.Models.UserLogin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid d-none d-lg-block">
    <div class="container-center">
        <div class="view-header">
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-unlock"></i>
            </div>
            <div class="header-title">
                <h3>Login</h3>
                <small>Please enter your credentials to login.</small>
            </div>
        </div>

        <div class="panel panel-filled">
            <div class="panel-body">
                @Html.ValidationSummary(true)
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "LoginForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Credential, new
                        {
                            placeholder = "example@gmail.com",
                            title = "Please enter your username",
                            @class = "form-control"
                        })
                        <span class="help-block small">Your unique username to app</span>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new
                        {
                            @class = "form-control",
                            placeholder = "******",
                            title = "Please enter your password"
                        })
                        <span class="help-block small">Your strong password</span>
                    </div>
                    <div>
                        <button type="submit" class="btn ">Login</button>
                    </div>
                }
                <a href="@Url.Action("Register", "Register")" class="small">Create an account</a>
            </div>
        </div>
    </div>
</div>