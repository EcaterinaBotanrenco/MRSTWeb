@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    @using System.Web.Optimization
@model WebApplication1.Domain.Entities.User.ULoginData
    <div class="container-center">
        <div class="view-header">
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-unlock"></i>
            </div>
            <div class="header-title">
                <h3>Login</h3>
                <small>Please enter your credentials to login.</small>
            </div>
        </div>

        <div class="panel panel-filled">
            <div class="panel-body">
                @Html.ValidationSummary(true)
                @using (Html.BeginForm("UserLoginAction", "Login", FormMethod.Post, new { id = "LoginForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Credential, new
                        {
                            placeholder = "example@gmail.com",
                            title = "Please enter your username",
                            @class = "form-control"
                        })
                        <span class="help-block small">Your unique username to app</span>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new
                        {
                            @class = "form-control",
                            placeholder = "******",
                            title = "Please enter your password"
                        })
                        <span class="help-block small">Your strong password</span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-accent">Login</button>
                        <a class="btn btn-default" href="register.html">Register</a>
                    </div>
                }
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    </div>
</body>
</html>
